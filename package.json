{
  "name": "klym",
  "displayName": "Klym",
  "description": "LSP for Klym and KITM",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "grammars": [
      {
        "language": "klym",
        "scopeName": "source.klym",
        "path": "./syntaxes/klym.tmLanguage.json"
      }
    ],
    "languages": [
      {
        "id": "klym",
        "aliases": [
          "Klym",
          "klym"
        ],
        "extensions": [
          ".klym"
        ],
        "configuration": "./config/klym.json"
      },
      {
        "id": "kitm",
        "aliases": [
          "KlymIntembly",
          "kitm"
        ],
        "extensions": [
          ".kitm"
        ]
      }
    ],
    "iconThemes": [
      {
        "id": "klym-icons",
        "label": "Klym Icons",
        "path": "./icons/klym-icons-icon-theme.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.34.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "opentype.js": "^1.3.4",
    "svg-path-parser": "^1.1.0",
    "svgpath": "^2.6.0"
  }
}
